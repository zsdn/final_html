        <div class="container border">

            <!-- SSR -->
            <form method="post" action="/message2">

                <div class="container border">
                    <div class="row border"
                        style="background-image: url('images/整個框2.png'); background-repeat: no-repeat; background-size: 900px;">
                        <% character.forEach(function(item){if(item.check=="big" ){%>
                            <div class="col-md-12 col-lg-3 border">
                                <div id="row" class="col-sm-12 col-md-3 col-lg-1 border" style="padding-bottom: 20px;">
                                </div>
                                <p style="padding-left: 90px; ">
                                    <%= item.username %>
                                </p>
                                <img src="uploads/<%= item.username %>.png"
                                    style="width: 170px; height: 120px;float:center; padding-left: 50px;">
                                <div id="row" class="col-sm-12 col-md-3 col-lg-1 border" style="padding-bottom: 40px;">
                                </div>

                            </div>
                            <div class="col-md-12 col-lg-8 border" ;>
                                <!-- <img src="images/框.png" id="P1" > -->
                                <div id="row" class="col-sm-12 col-md-3 col-lg-1 border" style="padding-bottom: 10px;">
                                </div>
                                <b style="margin-left: 30px;">
                                    <%= item.title %>
                                </b><br>
                                <img src="uploads/<%= item.title %>.png"
                                    style="width: 170px; height: 120px;float:center; padding-left: 50px;">
                                <p style="padding-left: 30px">
                                    <%= item.commet %>
